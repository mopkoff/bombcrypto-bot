sub(scroll_down)
   logwrite("Started scrolling")   
   WNDBUMP($current_hwid)       
   waitms(122) 	
   	      
   for($b=0,$b<50)  
                  
      WHEELDOWN(100)  
      waitms(10)    
   end_cyc      
                            
   logwrite("Finished scrolling")     
end_sub

sub(wait_pic_and_scroll, $filename, $interval, $times)
   wait_pic_and_click($filename, $interval, $times)
   scroll_down()
end_sub

