sub(scroll_down, $filename, $interval, $times)
   logwrite("Started scrolling")   
   WNDBUMP($current_hwid)       
   wait_pic_and_click($filename, $interval, $times)
   waitms(122) 	
   	      
   for($b=0,$b<50)  
                  
      WHEELDOWN(100)  
      waitms(10)    
   end_cyc      
                            
   logwrite("Finished scrolling")     
end_sub

SUB(send_to_work) 
   logwrite("Started sending to work")  
   $x_work = 467
	 $y_work = 645
	 $count = 0  
	 $timeout_count = 0    
	 $timeout = 5

   GETSCREEN             
   $pxl = PXL ($x_work, $y_work)
   WHILE(($pxl ! 8962434) and ($timeout_count < $timeout)) 
      move($x_work, $y_work) 
      IF($pxl == 5996887)
         $timeout_count = 0		 
         WAITMS (50)
         LCLICK($x_work, $y_work)
         $count = $count + 1
         logwrite($count, " sent to work")
			END_IF	     			 
      GETSCREEN 
      $pxl = PXL ($x_work, $y_work)
      WAITMS (1000)
      $timeout_count = $timeout_count + 1
      logwrite("wait for workers", $timeout_count)
   END_CYC
   logwrite("Finished sending to work") 
END_SUB

